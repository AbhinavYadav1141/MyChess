#: import Window kivy.core.window.Window

<QueenW@Button>:
    canvas:
        Rectangle:
            source: "assets/images/q1.png"
            size: self.size
            pos: self.pos

<QueenB@Button>:
    canvas:
        Rectangle:
            source: "assets/images/q2.png"
            size: self.size
            pos: self.pos

<RookW@Button>:
