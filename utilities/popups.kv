<PromotionPopupW>:
    BoxLayout:
        QueenW:
            on_press:
                root.command("queen", root.move, root.i)
                root.dismiss()
        RookW:
            on_press:
                root.command("rook", root.move, root.i)
                root.dismiss()
        KnightW:
            on_press:
                root.command("knight", root.move, root.i)
                root.dismiss()
        BishopW:
            on_press:
                root.command("bishop", root.move, root.i)
                root.dismiss()
        
