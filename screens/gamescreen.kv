#: import Window kivy.core.window.Window


<Block>:
    canvas.before:
        Rectangle:
            source: self.source
            pos: self.pos
            size: self.size


<GameScreen>:
    board: board
    FloatLayout:
        id: mainlayout
        board: board
        BoxLayout:
            id: mainbox
            orientation: "vertical" if Window.height > Window.width else "horizontal"

            BoxLayout:
                orientation: "horizontal" if Window.height > Window.width else "vertical"
                size_hint: (1, .1) if Window.height > Window.width else (.1, 1)
                Button:
                    text: "START"
                    on_release: board.start(self)

            BoxLayout:
                id: game
                orientation: "vertical"
                # size_hint: (None, None)
                # height: min(Window.height, Window.width)
                # width: self.height

                BoxLayout:
                    size_hint_y: .9
                    BoxLayout:
                        id: rank
                        orientation: "vertical"
                        size_hint_x: None
                        width: Window.width*.08
                        size_hint_y: None
                        height: board.height
                        Label:
                            text: "8"
                        Label:
                            text: "7"
                        Label:
                            text: "6"
                        Label:
                            text: "5"
                        Label:
                            text: "4"
                        Label:
                            text: "3"
                        Label:
                            text: "2"
                        Label:
                            text: "1"
                    ChessLayout:
                        id: board
                        mainlayout: mainlayout
                        gamescreen: root
                        size_hint: (None, None)
                        height: min(game.width-rank.width, game.height-file.height)
                        width: self.height

                BoxLayout:
                    id: file
                    size_hint_y: None
                    height: game.height*.07

                    Label:
                        size_hint_x: None
                        width: rank.width

                    BoxLayout:
                        size_hint_x: None
                        width: board.width
                        Label:
                            text: "a"
                        Label:
                            text: "b"
                        Label:
                            text: "c"
                        Label:
                            text: "d"
                        Label:
                            text: "e"
                        Label:
                            text: "f"
                        Label:
                            text: "g"
                        Label:
                            text: "h"


            BoxLayout:
                size_hint: (1, .1) if Window.height > Window.width else (.1, 1)
                orientation: "vertical" if Window.height < Window.width else "horizontal"
                Button:
                    id: restart_btn
                    text: "RESTART"
                    on_release:
                        board.restart(self)
                        self.disabled = False
                Button:
                    id: close_button
                    text: "close"
                    on_release:
                        board.close(self)
